@model IEnumerable<KitundaChurch.Models.Song>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.songName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.songData)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ContentType)
                </th>
            <th>
                @Html.DisplayNameFor(model => model.Album)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.songName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.songData)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContentType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Album.AlbumId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.songId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.songId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.songId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
