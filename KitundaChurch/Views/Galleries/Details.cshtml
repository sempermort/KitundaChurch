@model KitundaChurch.Models.Gallery

@{
    ViewData["Title"] = "Details";
}



    @foreach (var item in Model.image)
    {

        {
            var base64 = Convert.ToBase64String(item.content);
            var imgSrc = String.Format("data:image/jpg;base64,{0}", base64);
            ViewBag.img = imgSrc;
        }
            <div class="gallery_product col-lg-4 col-md-4 col-sm-4 col-xs-6 filter @Model.Category">
                <img src="@ViewBag.img" class="img-responsive">
            </div>

        
    }

}


<div>
    <a asp-action="Edit" asp-route-id="@Model.GalleryId">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model.GalleryId">Delete</a>|
    <a asp-action="Index">Back to List</a>
</div>
