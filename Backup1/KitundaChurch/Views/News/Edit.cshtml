@model  KitundaChurch.Models.News

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


<h2>Create News</h2>

@*@Styles.Render("~/Content/summernote")*@

<div class="panel panel-primary">
    <div class="panel-heading panel-head">Create News Content</div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <script>
                $(document).ready(function () {

                        function initialize() {
                            $('#content').summernote({
                                focus: true,
                                height: 250,
                                codemirror: {
                                    theme: 'united'
                                }
                            });
                        }
                            initialize();



                });
            </script>
            <div class="form-horizontal">

                <div class="form-group">
                    @Html.LabelFor(model => model.Title, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-9">
                        @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.content, new { @class = "col-lg-2 control-label" })
                    <div class="col-lg-9">
                        @Html.TextAreaFor(model => model.content, new { @class = "form-control  ", @row = 5 })
                        @Html.ValidationMessageFor(model => model.content, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-9"></div>
                    <div class="col-lg-3">
                        <button class="btn btn-success" id="btnSubmit" type="submit">
                            Submit
                        </button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>